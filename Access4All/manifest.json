{
  "manifest_version": 2,
  "name": "Access4All",
  "description": "Automatically adds alt text to images that lack it and increases contrast where it is inadequate.",
  "version": "1.01",
  "permissions": [
    "tabs",
    "https://oq2hish015.execute-api.us-east-2.amazonaws.com/default/handle_accessibility"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "imagealt.js"
      ]
    }
  ]
}
